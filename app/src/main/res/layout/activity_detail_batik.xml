<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.detail.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondaryContainer"
            app:titleTextColor="@color/primary"
            app:titleTextAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:title="@string/history" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivImageBatik"
            android:layout_width="300dp"
            android:layout_height="360dp"
            android:scaleType="centerCrop"
            android:paddingTop="16dp"
            android:paddingHorizontal="16dp"
            app:srcCompat="@drawable/sample_batik"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/cd_ivImageBatik"
            android:background="@drawable/rounded_corner" />

        <TextView
            android:id="@+id/tvNameMotif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/name_motif_sample"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivImageBatik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDetailOrigin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/origin_sample"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvNameMotif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDescriptionBatik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/description_batik_sample"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetailOrigin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
